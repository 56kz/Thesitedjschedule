# Ejemplo de .env para el VPS (Hostinger) con Nginx + Let's Encrypt.
# Copia a .env en el servidor. No versiones .env.

RAILS_ENV=production

MYSQL_HOST=db
MYSQL_USER=rails
MYSQL_PASSWORD=cambiar_password_seguro
MYSQL_DATABASE=db_thesitedj
MYSQL_ROOT_PASSWORD=cambiar_root_password

SECRET_KEY_BASE=generar_con_bin_rails_secret

PORT=3000

# Con Nginx terminando SSL, Rails debe asumir HTTPS (no tocar en producci√≥n con HTTPS).
FORCE_SSL=true
# DISABLE_SSL no definir (o comentar) para que la app use SSL.
