# Copia este archivo a .env y rellena los valores. No versiones .env

# Entorno Rails
RAILS_ENV=production

# Base de datos MySQL (contenedor o servidor)
MYSQL_HOST=db
MYSQL_USER=rails
MYSQL_PASSWORD=railssecret
MYSQL_DATABASE=db_thesitedj
MYSQL_ROOT_PASSWORD=rootpassword

# Obligatorio en producción (generar con: bin/rails secret)
SECRET_KEY_BASE=

# Puerto donde exponer la app (solo para docker-compose)
PORT=3000

# --- SSL (importante para login y CSRF) ---
# Local / Docker sin HTTPS: desactiva SSL para evitar 422 y ERR_SSL_PROTOCOL_ERROR.
# FORCE_SSL=false
# DISABLE_SSL=1
#
# VPS con Nginx + Let's Encrypt: usa .env.production.example (FORCE_SSL=true, sin DISABLE_SSL).
#
# --- Correo (recuperación de contraseña y envío de instrucciones) ---
# MAILER_SENDER=noreply@tudominio.com
# MAILER_HOST=tudominio.com
# En producción configura también config.action_mailer.smtp_settings en config/environments/production.rb
#
# Contraseña por defecto al crear usuarios desde el panel (admin)
# DEFAULT_STUDENT_PASSWORD=12345678
