<div class="container">

  <div class="row">

    <div class="col-md-8 ml-0">
    <br>
      <%= link_to "Crear Usuario", new_user_path, class: "btn btn-primary" %>
    </div>
    <div class="col-sm-12">

    <hr>
      <h2 class="text-center">Usuarios</h2> <br>

      <table class="table table-striped table-bordered text-center">
        <tr>
          <th>Id</th>
          <th>Nombre</th>
          <th>Tel√©fono</th>
          <th>Email</th>
          <th>Rol</th>
          <th>Opciones</th>
        </tr>

        <% @users.each do |u| %>
          <tr>
            <td><%= u.id %></td>
            <td><%= u.name %></td>
            <td><%= u.phone %></td>
            <td><%= u.email %></td>
            <td><%= u.rol %></td>
            <td>
            <div class="btn-group" role="group">
              <%= link_to "Editar", edit_user_path(u), class:"btn btn-success" %>
              <%= link_to "Eliminar", u, method: :delete, data: { confirm: "Seguro deseas eliminar el usuario?" }, class:"btn btn-secondary" %>
            </div>
            </td>
          </tr>
        <% end %>

      </table>


      </div>
    </div>
</div>


