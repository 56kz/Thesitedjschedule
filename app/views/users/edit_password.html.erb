<div class="container-fluid py-3">
  <div class="card shadow-sm">
    <div class="card-header bg-white d-flex justify-content-between align-items-center py-3">
      <h5 class="mb-0 font-weight-bold text-dark"><i class="bi bi-key mr-2"></i>Cambiar contraseña de <%= @user.name %></h5>
      <%= link_to users_path, class: "btn btn-outline-secondary btn-sm", data: { toggle: "tooltip" }, title: "Volver a usuarios" do %>
        <i class="bi bi-arrow-left"></i> Volver
      <% end %>
    </div>
    <div class="card-body">
      <% if @student&.errors&.any? %>
        <div class="alert alert-danger">
          <ul class="mb-0">
            <% @student.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="row justify-content-center">
        <div class="col-sm-12 col-md-6">
          <%= form_for @user, url: update_password_user_path(@user), method: :patch do |f| %>
            <div class="form-group">
              <%= label_tag :password, "Nueva contraseña" %>
              <em class="text-muted">(<%= Devise.password_length.min %> caracteres mínimo)</em>
              <%= password_field_tag :password, nil, class: "form-control form-control-lg", autocomplete: "new-password" %>
            </div>
            <div class="form-group">
              <%= label_tag :password_confirmation, "Confirmar contraseña" %>
              <%= password_field_tag :password_confirmation, nil, class: "form-control form-control-lg", autocomplete: "new-password" %>
            </div>
            <%= submit_tag "Actualizar contraseña", class: "btn btn-primary btn-lg btn-block" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
