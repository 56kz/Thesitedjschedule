<div class="container text-center general-info">
  <div class="row">
    <div class="col-sm-6 mx-auto"><br><br>
      <h1>Cambiar contraseña de <%= @user.name %></h1><br>

      <% if @student&.errors&.any? %>
        <div class="alert alert-danger">
          <ul class="mb-0">
            <% @student.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <%= form_for @user, url: update_password_user_path(@user), method: :patch do |f| %>
        <div class="form-group">
          <%= label_tag :password, "Nueva contraseña" %>
          <% min_len = Devise.password_length.min %>
          <em class="d-block">(<%= min_len %> caracteres mínimo)</em>
          <%= password_field_tag :password, nil, class: "form-control input-lg", autocomplete: "new-password" %>
        </div>
        <div class="form-group">
          <%= label_tag :password_confirmation, "Confirmar contraseña" %>
          <%= password_field_tag :password_confirmation, nil, class: "form-control input-lg", autocomplete: "new-password" %>
        </div>
        <div>
          <%= submit_tag "Actualizar contraseña", class: "btn btn-primary btn-lg btn-block" %>
        </div>
      <% end %>
      <br>
      <%= link_to "Volver a usuarios", users_path, class: "btn btn-secondary" %>
    </div>
  </div>
</div>
