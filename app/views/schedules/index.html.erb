                    aria-describedby="time-picker" autocomplete="off" />
            </div><br>


            <div class="btn-group-vertical" role="group">
                <div class="btn btn-primary hour-btn">8:00 am 10:00 am</div>
                <div class="btn btn-primary hour-btn">10:00 am 12:00 pm</div>
                <div class="btn btn-primary hour-btn">12:00 pm 02:00 pm</div>
                <div class="btn btn-primary hour-btn">2:00 pm 4:00 pm</div>
                <div class="btn btn-primary hour-btn">4:00 pm 6:00 pm</div>
                <div class="btn btn-primary hour-btn">6:00 pm 8:00 pm</div>
                <div class="btn btn-primary hour-btn">8:00 pm 10:00 pm</div>
            </div>
        </div>

        <div class="col-sm-8 col-md-8 col-sm-offset-1 col-md-offset-1">
            <div id='calendar'></div>
        </div>
    </div>
</div>

