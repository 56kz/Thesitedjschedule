<div class="container">
  <div class="row">

    <div class="col-md-8 ml-0">
    <br>
      <%= link_to "Crear Reserva", new_reservation_path, class: "btn btn-primary" %>
    </div>

    <div class="col-sm-10 mx-auto">
  <hr>
      <h2 class="text-center">Reservas</h2><br>

      <table class="table table table-striped table-bordered compact text-center">
      <thead>
        <tr>
          <th>Día</th>
          <th>Suscripción</th>
          <th>Usuario</th>
          <th>Sala</th>
        </tr>
      </thead>
      <tbody>
        <% @reservations.each do |r| %>
        <tr>
          <td><%= r.reserve_date %></td>
          <td><%= r.suscription.name %></td>
          <td><%= r.suscription.user.name %></td>
          <td><%= r.schedule.room.name %></td>
        </tr>
        <% end %>
      </tbody>
      </table>

    </div>
  </div>
</div>
