      <br>
      <%= link_to "Crear Reserva", new_reservation_path, class: "btn btn-primary" %>
    </div>

    <div class="col-sm-12 mx-auto">
      <div class="card">
        <div class="card-header text-center">
          <h2>Reservas</h2>
        </div>
        <div class="card-body">
          <table class="table table  table-striped table-bordered text-center">
            <thead>
              <tr>
                <th>Fecha</th>
                <th>Hora Inicio</th>
                <th>Suscripci√≥n</th>
                <th>Usuario</th>
                <th>Sala</th>
              </tr>
            </thead>
            <tbody>
              <% @reservations.each do |r| %>
                <tr>
                  <td><%= r.reserve_date %></td>
                  <td><%= r.start_hour %></td>
                  <td><%= r.suscription.name %></td>
                  <td><%= r.suscription.user.name %></td>
                  <td>Cabina&nbsp;<%= r.room %></td>
