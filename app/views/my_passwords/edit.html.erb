<div class="container-fluid py-3">
  <div class="card shadow-sm">
    <div class="card-header bg-white py-3">
      <h5 class="mb-0 font-weight-bold text-dark"><i class="bi bi-key mr-2"></i>Cambiar mi contraseña</h5>
    </div>
    <div class="card-body">
      <div class="row justify-content-center">
        <div class="col-sm-12 col-md-6">
          <%= form_for(current_student, url: edit_my_password_path, html: { method: :patch }) do |f| %>
            <%= render "devise/shared/error_messages", resource: current_student %>

            <div class="form-group">
              <%= f.label :current_password, "Contraseña actual" %>
              <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control form-control-lg" %>
            </div>

            <div class="form-group">
              <%= f.label :password, "Nueva contraseña" %>
              <% if @minimum_password_length %>
                <em class="text-muted">(<%= @minimum_password_length %> caracteres mínimo)</em>
              <% end %>
              <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control form-control-lg" %>
            </div>

            <div class="form-group">
              <%= f.label :password_confirmation, "Confirmar nueva contraseña" %>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control form-control-lg" %>
            </div>

            <div class="d-flex justify-content-between">
              <%= link_to root_path, class: "btn btn-outline-secondary" do %>
                <i class="bi bi-arrow-left"></i> Cancelar
              <% end %>
              <%= f.submit "Actualizar contraseña", class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
