<div class="container-fluid py-3">
  <div class="card shadow-sm">
    <div class="card-header bg-white d-flex justify-content-between align-items-center py-3">
      <h5 class="mb-0 font-weight-bold text-dark"><i class="bi bi-credit-card mr-2"></i>Suscripciones</h5>
      <div class="btn-group">
        <%= link_to new_suscription_path, class: "btn btn-primary btn-sm", data: { toggle: "tooltip" }, title: "Crear suscripción" do %>
          <i class="bi bi-plus-lg"></i> Crear suscripción
        <% end %>
      </div>
    </div>
    <div class="card-body table-card-body">
      <div class="table-responsive">
        <table class="table table-hover table-striped table-bordered mb-0 text-center">
          <thead class="thead-light">
            <tr>
              <th>Tipo</th>
              <th>Estado</th>
              <th>Horas</th>
              <th>Cabinas</th>
              <th>Factura</th>
              <th>Suscriptor</th>
              <th>Observaciones</th>
              <th>Fecha</th>
              <th class="text-nowrap">Opciones</th>
            </tr>
          </thead>
          <tbody>
            <% @suscriptions.each do |s| %>
              <tr>
                <td><%= s.name %></td>
                <td><%= s.status ? "Activo" : "Inactivo" %></td>
                <td><%= s.hours %></td>
                <td><%= s.rooms %></td>
                <td><%= s.invoice_number %></td>
                <td><%= s.user.name %></td>
                <td><%= s.observations %></td>
                <td><%= s.created_at.in_time_zone %></td>
                <td>
                  <div class="btn-group btn-group-sm" role="group">
                    <%= link_to edit_suscription_path(s), class: "btn btn-outline-success", data: { toggle: "tooltip" }, title: "Editar" do %>
                      <i class="bi bi-pencil"></i>
                    <% end %>
                    <%= link_to s, method: :delete, data: { confirm: "¿Seguro deseas eliminar la suscripción?", toggle: "tooltip" }, title: "Eliminar", class: "btn btn-outline-danger" do %>
                      <i class="bi bi-trash"></i>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
