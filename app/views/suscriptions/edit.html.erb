<div class="container">
  <div class="row">
    <div class="col-sm-4 mx-auto"><br>
      <h1 class="text-center">Editar Suscripci√≥n</h1>
      <br>
        <%= form_for @suscription do |s| %>
          <div class="form-group">
            <%= s.text_field :user_id, class: "form-control input-sm", placeholder: "Id de Usuario" %>
          </div>
          <div class="form-group">
            <%= s.text_field :rooms, class: "form-control input-sm", placeholder: "Cabinas" %>
          </div>
          <div class="form-group">
            <%= s.text_field :observations, class: "form-control input-sm", placeholder: "Observaciones" %>
          </div>
          <div class="form-group">
            <%= s.label "Tipo" %> <br />
            <%= s.select :name, Suscription.names.keys, {}, class: "form-control input-sm" %>
          </div>
          <div class="form-group">
            <%= s.label "Horas" %> <br />
            <%= s.select :hours, Suscription.hours.keys, {}, class: "form-control input-sm" %>
          </div>
          <div class="form-group text-center">
            <%= s.label "Activo" %> <br />
            <%= s.check_box :status %>
          </div>
          <div>
            <%= s.submit "Actualizar", class: "btn btn-primary btn-block" %>
          </div>
        <% end %>
    </div>
  </div>
</div>
