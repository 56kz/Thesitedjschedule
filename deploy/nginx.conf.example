# Nginx en el VPS (Hostinger). Sustituye TUDOMINIO.COM por tu dominio.
# Coloca este archivo en /etc/nginx/sites-available/thesitedj
# y enlaza: sudo ln -s /etc/nginx/sites-available/thesitedj /etc/nginx/sites-enabled/
# Certificados Let's Encrypt: certbot obtiene y renueva en /etc/letsencrypt/live/TUDOMINIO.COM/

server {
    listen 80;
    server_name TUDOMINIO.COM www.TUDOMINIO.COM;
    # Redirigir todo HTTP a HTTPS (certbot usa .well-known por HTTP la primera vez)
    location / {
        return 301 https://$host$request_uri;
    }
    location /.well-known/acme-challenge/ {
        root /var/www/certbot;
    }
}

server {
    listen 443 ssl http2;
    server_name TUDOMINIO.COM www.TUDOMINIO.COM;

    ssl_certificate     /etc/letsencrypt/live/TUDOMINIO.COM/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/TUDOMINIO.COM/privkey.pem;
    include /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;

    client_max_body_size 50M;

    location / {
        proxy_pass http://127.0.0.1:3000;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Real-IP $remote_addr;
    }
}
